.side
  .side__header
    %h3.side__header__name
      = current_user.name
        = link_to new_group_path, class: "side_header__btn" do
          = fa_icon 'pencil-square-o', class: 'icon'
        = link_to edit_user_path(current_user), class: "side_header__btn" do
          = fa_icon 'cog', class: 'icon'
  .side__list
    .groups
      .group
        - current_user.groups.each do |group|
        = link_to '#' do
          .group__name
            = group.name
          .group__message